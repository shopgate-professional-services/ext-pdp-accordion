{
  "version": "1.0.0",
  "id": "@shopgate-project/ext-pdp-accordion",
  "components": [
    {
      "id": "Accordion",
      "type": "portals",
      "path": "frontend/portals/Accordion",
      "target": "product.description.after"
    },
    {
      "id": "descriptionOverwrite",
      "type": "portals",
      "path": "frontend/components/DescriptionOverwrite/index.jsx",
      "target": "product.description"
    },
    {
      "id": "reviewsOverwrite",
      "type": "portals",
      "path": "frontend/components/ReviewsOverwrite/index.jsx",
      "target": "product.reviews"
    },
    {
      "type": "translations",
      "path": "frontend/locale/de-DE.json",
      "id": "locale/de-DE"
    },
    {
      "type": "translations",
      "path": "frontend/locale/en-US.json",
      "id": "locale/en-US"
    },
    {
      "type": "translations",
      "path": "frontend/locale/fr-FR.json",
      "id": "locale/fr-FR"
    }
  ],
  "configuration": {
    "canOpenMultiple": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "type": "checkbox",
        "label": "Allow multiple items to be open at same time"
      }
    },
    "accordionItems": {
      "type": "admin",
      "destination": "frontend",
      "default": [],
      "params": {
        "type": "json",
        "label": "accordionItems",
        "required": true
      }
    }
  }
}
